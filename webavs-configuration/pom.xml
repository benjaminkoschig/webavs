	<properties>
		<!-- SCM ATTRIBUTES -->
		<scm.path>webavs-repos</scm.path>
		<scm.tags>${scm.protocol}://${scm.base}/tags</scm.tags>
		<scm.url>${scm.protocol}://${scm.base}/trunk/configuration</scm.url>
		<scm.weburl>http://${scm.base}/trunk/configuration</scm.weburl>
