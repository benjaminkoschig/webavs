<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>ch.globaz</groupId>
		<artifactId>webavs-parent</artifactId>
		<version>1.15.02-SNAPSHOT</version>
	</parent>

	<artifactId>webavs-sql</artifactId>
	<name>The SQL scripts</name>
	<packaging>pom</packaging>

	<properties>
		<y>${project.build.directory}</y>
		<y>${project.version}}</y>
		<y>${project.build.directory}</y>
	</properties>


	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>sql-scripts-agregation</id>
						<phase>package</phase>
						<configuration>
							<target>
								<property name="currentVersion" value="${project.version}" />
								<property name="sourceSqlDir" value="src/main/sql" />
								<property name="targetSqlDir" value="${project.build.directory}" />

								<ant antfile="src/ant/build.xml">
									<target name="main" />
								</ant>
								<!-- <exec executable="cmd"> -->
								<!-- <arg value="${project.version}" /> -->
								<!-- sourceSqlDir= -->
								<!-- <arg value="src/main/sql" /> -->
								<!-- targetSqlDir= -->
								<!-- <arg value="${project.build.directory}/sql" /> -->
								<!-- </exec> -->

							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>

				<dependencies>
					<dependency>
						<groupId>org.codehaus.groovy</groupId>
						<artifactId>groovy-ant</artifactId>
						<version>2.4.5</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>zip-sql-resources</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptor>src/assembly/build-sql-zip.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>