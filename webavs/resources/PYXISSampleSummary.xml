<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="summaryContainer" class="globaz.pyxis.summary.TISummaryContainer">
		<property name="modules">
		    <list>
		        <bean  class="globaz.pyxis.summary.TISummaryTiers">
		        	<property name="maxHorizontalItems" value="3"/>		
		        </bean>
				
		        <bean  class="globaz.pyxis.summary.TISummaryTest">
					<property name="title" value="Titre 1"/>	
				</bean>
		    
		        <bean  class="globaz.pyxis.summary.TISummaryBreak"/>
		        
		        <bean  class="globaz.pyxis.summary.TISummaryTest">
					<property name="title" value="Titre 2"/>	
		        </bean>
		        <bean  class="globaz.pyxis.summary.TISummaryTest">
					<property name="title" value="Titre 3"/>	
		        </bean>
		        <bean  class="globaz.pyxis.summary.TISummaryTest">
					<property name="title" value="Titre 4"/>	
		        </bean>
		        
		        <bean  class="globaz.pyxis.summary.TISummaryBreak"/>
		        
		        <bean  class="globaz.pyxis.summary.TISummaryTest2">
		        	<property name="style" value="border : solid 2px red;"/>
		        </bean>
		        
		    </list>
		  </property>
	</bean>
</beans>