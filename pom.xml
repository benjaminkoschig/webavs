<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>ch.globaz</groupId>
        <artifactId>java-superpom</artifactId>
        <version>1.0.4</version>
    </parent>

    <artifactId>webavs-parent</artifactId>
    <version>1.15.02-SNAPSHOT</version>
    <packaging>pom</packaging>

    <scm>
        <url>${scm.weburl}</url>
        <connection>scm:${scm.type}:${scm.url}</connection>
        <developerConnection>scm:${scm.type}:${scm.url}</developerConnection>
    </scm>

    <properties>
        <wiki.parent>WebAVS RN</wiki.parent>
        <!-- SCM ATTRIBUTES -->
        <scm.path>webavs-repos</scm.path>
        <scm.tags>${scm.protocol}://${scm.base}/tags</scm.tags>
        <scm.url>${scm.protocol}://${scm.base}/trunk/webavs-parent</scm.url>
        <scm.weburl>http://${scm.base}/trunk/webavs-parent</scm.weburl>
        <release.tagFormat>webavs/webavs-parent/@{project.version}</release.tagFormat>
        
        
        <!-- since we are building with JDK 1.6, we need to override some plugin's version -->
        <buildhelper.version>1.9.1</buildhelper.version>
    </properties>

    <modules>
        <module>../webavs-api</module>
        <module>../webavs</module>
        <module>../webavs-ear</module>
    </modules>


    <reporting>
        <plugins>
            <!-- Temporary fix for https://issues.apache.org/jira/browse/MRELEASE-926 -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <reportSets>
                    <reportSet>
                        <id>default</id>
                        <reports>
                            <report>javadoc</report>
                            <report>test-javadoc</report>
                        </reports>
                    </reportSet>
                    <reportSet>
                        <id>aggregate</id>
                        <reports />
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>