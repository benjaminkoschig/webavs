            <xs:element name="debut" type="xs:date"/>
            <xs:element name="fin" type="xs:date"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="BasesCalculDecompteIJ">
        <xs:annotation><xs:documentation>bases de calcul pour un décompte (mensuel) de paiement)</xs:documentation></xs:annotation>
        <xs:sequence>
            <xs:element name="id" type="xs:string"/>
            <xs:element name="statut">
                <xs:annotation><xs:documentation>1 = normal 2 = rectificatif 3 = annulateur</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:int">
                        <xs:enumeration value="1"/>
                        <xs:enumeration value="2"/>
                        <xs:enumeration value="3"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="idDecompteRemplace" type="xs:string" minOccurs="0">
                <xs:annotation><xs:documentation>en cas de statut 2 ou 3 uniquement : identifiant du décompte remplacé</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="dateCreation" type="xs:date"/>
            <xs:element name="debut" type="xs:date"/>
            <xs:element name="fin" type="xs:date"/>
            <!-- inutile avec joura a payer-->
            <!--<xs:element name="nbJoursInternes" type="xs:int" minOccurs="0">
                    <xs:annotation><xs:documentation>obligatoire si joursAPayer absent</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="nbJoursExternes" type="xs:int" minOccurs="0">
                <xs:annotation><xs:documentation>obligatoire si joursAPayer absent</xs:documentation></xs:annotation>
            </xs:element>-->
            <xs:element name="joursAPayer">
                <xs:annotation><xs:documentation>Vecteur de longeur = durée de la période selon champs 1 et 2, chaque position contenant une des valeurs suivantes : 1 = jour à payer en tant qu’interne 2 = jour à payer en tant qu’externe 0 = jour sans paiement, 3 : maladie payé, 4 : maladie non payé. Ex. pour une période déclarée du 01/01/2011 au 07/01/2011 : 2220211 signifie qu’il faut payer les 1,2,3 et 5ème jours comme externe et les 6 et 7ème jours comme interne (le 4ème jour n’est pas payé)..</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value="[01234]+"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="raisonInterruption" minOccurs="0">
                <xs:annotation><xs:documentation>1 = Maladie/accident sans rap. Avec réadaptation 2 = Maladie/accident en rap. Avec réadaptation  3 = Grossesse 4 = Accouchement  5 = Autres motifs</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:int">
                        <xs:minInclusive value="1"/>
                        <xs:maxInclusive value="5"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="tauxImposition" minOccurs="0">
                <xs:annotation><xs:documentation>Taux d'imposition calculé par Acor ou saisi manuellement. Si absent on s'attend à ce que la bases de calcul de décompte soit une BasesCalculDecompteCourantIJ, dans ce cas le taux sera déterminé par Acor</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:double">
                        <xs:pattern value="\d{1,2}(\.\d{1,4})"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="versementSepare" type="xs:boolean"/>
            <xs:element name="decompteHistorique" type="xs:boolean">
                <xs:annotation><xs:documentation>Un décompte en historique est un décompte calculé par une autre instance de la confédération (ou par un ancien système) qui doit être ignoré dans la comptabilité de la caisse</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="partPatronaleHistorique" type="xs:boolean" minOccurs="0">
                <xs:annotation><xs:documentation>Si le décompte en historique à une part patronale (pas de cotisations)</xs:documentation></xs:annotation>
            </xs:element>

<!--            <xs:element name="joursInterruption" minOccurs="0">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="nbJoursPayes" type="xs:int"/>
                            <xs:element name="raison">
                                <xs:annotation><xs:documentation>1 = Maladie/accident sans rap. Avec réadaptation 2 = Maladie/accident en rap. Avec réadaptation  3 = Grossesse 4 = Accouchement  5 = Autres motifs</xs:documentation></xs:annotation>
                                <xs:simpleType>
                                    <xs:restriction base="xs:int">
                                        <xs:minInclusive value="0"/>
                                        <xs:maxInclusive value="5"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
            </xs:element>-->
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="BasesCalculDecompteCourantIJ">
        <xs:complexContent>
            <xs:extension base="ij:BasesCalculDecompteIJ">
                <xs:sequence>
                    <xs:element name="paiementsACalculer" type="ij:BasesCalculPaiementIJ" minOccurs="0" maxOccurs="unbounded">
                        <xs:annotation><xs:documentation>Paiement à calculer associés à ce nouveau décompte à calculer</xs:documentation></xs:annotation>
                    </xs:element>
                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="DecompteCalculeIJ">
        <xs:annotation><xs:documentation>Informations de décompte déjà calculé</xs:documentation></xs:annotation>
        <xs:sequence>
            <xs:element name="basesCalculDecompteIJ" type="ij:BasesCalculDecompteIJ">
                <xs:annotation><xs:documentation>Bases de calcul du décompte qui ont servie à le calculé (et qui l'identifie)</xs:documentation></xs:annotation>
            </xs:element>
<!--            <xs:element name="idDecompteRemplace" type="xs:string">
                <xs:annotation><xs:documentation>Identifiant du décompte que celui-ci remplace (si il y a lieu), dans ce cas statut=2 ou 3</xs:documentation></xs:annotation>
            </xs:element>-->
            <xs:element name="dateComptabilisation" type="xs:date" minOccurs="0"/>
            <xs:element name="tauxCotisation">
                <xs:simpleType>
                    <xs:restriction base="xs:double">
                        <xs:pattern value="\d{1,2}(\.\d{1,4})"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="paiementISTransmis" type="xs:boolean">
                <xs:annotation><xs:documentation>Un paiement à l'office d'imôts a-t-il été effectué pour ce paiement</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="montantBrut" type="xs:double"/>
            <xs:element name="montantNet" type="xs:double"/>
            <xs:element name="cotisations" type="xs:double" minOccurs="0">
                <xs:annotation><xs:documentation>Cotisations AVS/AI/APG de l’assuré, ne comprenant pas les cotisations versées par un employeur potentiel (valeur négative en cas de décompte rectificateur ou annulateur)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="cotisationsAC" type="xs:double" minOccurs="0">
                <xs:annotation><xs:documentation>Cotisations AC Cotisations AC de l’assuré, ne comprenant pas les cotisations versées par un employeur potentiel (valeur négative en cas de décompte rectificateur ou annulateur)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="partPatronale" type="xs:double" minOccurs="0">
                <xs:annotation><xs:documentation>versé à un employeur potentiel (valeur négative en cas de en cas de décompte rectificateur ou annulateur)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="deductionAO" type="xs:double" minOccurs="0">
                <xs:annotation><xs:documentation>Déduction de cotisation supplémentaire selon saisie du collaborateur (cas spéciaux donnant lieu à 2 retenues de cotisation : autom. + montant saisi)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="impots" type="xs:double" minOccurs="0">
                <xs:annotation><xs:documentation>montant de l'impôts à la source</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="comptabilise" type="xs:boolean">
                <xs:annotation><xs:documentation>Le décompte a-t-il été comptabilisé</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="montantNet2" type="xs:double">
                <xs:annotation><xs:documentation>si statut = 2, montant net après déduction du décompte d’origine.</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="paiement" type="ij:PaiementIJCalcule" minOccurs="0" maxOccurs="unbounded">
                <xs:annotation><xs:documentation>Remarque : un decompte calculé ne peut contenir que des paiements calculé (les paiements de décomptes après calcul du décompte se font via le compte d'attente)</xs:documentation></xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="BasesCalculPaiementIJ">
        <xs:annotation><xs:documentation>Bases de calucul pour produire un paiement</xs:documentation></xs:annotation>
        <xs:sequence>
            <xs:element name="id" type="xs:string"/>
            <xs:element name="idBeneficiaire" type="xs:string" minOccurs="0">
                    <xs:annotation><xs:documentation>si absent alors le paiement est payé à l'assuré (l'assuré à ces propres coordonnées de paiement et ces informations ne sont pas répétées)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="montant" type="xs:double">
                <xs:annotation><xs:documentation>Le montant du paiement. Montant obligatoire mais peut valoir -1 si le calcul de ce montant est délégué à Acor (solde du décompte)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="reference" type="xs:string" minOccurs="0">
                <xs:annotation><xs:documentation>Pour la rubrique 'communication' de l'OPAE</xs:documentation></xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="PaiementIJCalcule">
        <xs:annotation><xs:documentation>paiement déjà calculé identifié par ces bases de calcul</xs:documentation></xs:annotation>
        <xs:sequence>
            <xs:element name="basesCalculPaiement" type="ij:BasesCalculPaiementIJ"/>
            <xs:element name="dateCreation" type="xs:date"/>
            <xs:element name="dateStatut" type="xs:date">
                <xs:annotation><xs:documentation>date à laquelle le statut a été modifié pour la dernière fois</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="statut">
                <xs:annotation><xs:documentation>1=à transmettre, 2=transmis, 3=payé, 4=refusé, 5=retourné, 6=bloqué, 7=à bloquer</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:int">
                        <xs:minInclusive value="1"/>
                        <xs:maxInclusive value="7"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="infoBanque" type="xs:string">
                <xs:annotation><xs:documentation>Informations fournient par la banque en cas de refus (ou autres informations d'avertissements)</xs:documentation></xs:annotation>
            </xs:element>
            <xs:element name="comptabilise" type="xs:boolean"/>
            <xs:element name="DonneesOPAE">
                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="dateTransmission" type="xs:date" minOccurs="0"/>
                        <xs:element name="numero" type="xs:string"/>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
            <!--<xs:element name="genreBeneficiaire">
                <xs:annotation><xs:documentation>0=assuré, 1=employeur, 2=tiers, 3=AFC A VOIR</xs:documentation></xs:annotation>
                <xs:simpleType>
                    <xs:restriction base="xs:int">
                        <xs:minInclusive value="0"/>
                        <xs:maxInclusive value="3"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>-->
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="BeneficiaireIJ">
        <xs:annotation><xs:documentation>beneficiaire d'un paiement d'IJ</xs:documentation></xs:annotation>
        <xs:complexContent>
            <xs:extension base="acor-common:Meta">
                <xs:sequence>
                    <xs:element name="id" type="xs:string"/>
                    <xs:element name="denomination" type="xs:string"/>
                    <xs:element name="designationSupplementaire" type="xs:string"/>
                    <xs:element name="adresseBeneficiaire" type="acor-common:adresseType"/>
                    <xs:element name="adressePaiement" type="acor-common:banqueAdresseType" minOccurs="0"/>
                    <xs:element name="aDomicile" type="xs:boolean" minOccurs="0">
                        <xs:annotation><xs:documentation>Les paiements se font sans adresse bancaire</xs:documentation></xs:annotation>
                    </xs:element>
                    <xs:element name="genre">
                        <xs:annotation><xs:documentation>0=assure, 1=employeur 2=tiers</xs:documentation></xs:annotation>
                        <xs:simpleType>
                            <xs:restriction base="xs:int">
                                <xs:enumeration value="0"/>
                                <xs:enumeration value="1"/>
                                <xs:enumeration value="2"/>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:element>
                    <xs:element name="modifie" type="xs:boolean"/>
                    <xs:element name="actif" type="xs:boolean"/>
                    <xs:element name="nouveau" type="xs:boolean"/>
                    <xs:element name="dateSaisie" type="xs:date" minOccurs="0"/>
                    <xs:element name="noRef" minOccurs="0">
                        <xs:simpleType>
                            <xs:restriction base="xs:string">
                                <xs:maxLength value="30"/>
                            </xs:restriction>
                        </xs:simpleType>
                    </xs:element>

                </xs:sequence>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="RecapitulatifPaiementIJ">
        <xs:annotation><xs:documentation>Recapitulatif des paiements effectués</xs:documentation></xs:annotation>
        <xs:sequence>
            <xs:element name="debut" type="xs:date" minOccurs="0"/>
            <xs:element name="fin" type="xs:date" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
