		</linked-model>
		
		<linked-model name="decompteSimpleModel"
			model-ref="ch.globaz.vulpecula.business.models.decomptes.DecompteSimpleModel" join-type="INNER">
			<join-group operator="AND">
				<join-field name="id" operation="EQUALS" field-ref="ligneDecompteSimpleModel.idDecompte" />
			</join-group>
		</linked-model>
		
		<search-definition>
			<search-group operator="AND">
				<search-field name="forId" field-ref="ligneDecompteSimpleModel.id"
					operation="EQUALS" />
				<search-field name="forIdDecompte" field-ref="ligneDecompteSimpleModel.idDecompte"
					operation="EQUALS" />
				<search-field name="forIdDecompteGreater" field-ref="ligneDecompteSimpleModel.idDecompte" operation="GREATER_OR_EQUALS" />
				<search-field name="forIdPosteTravail"
					field-ref="ligneDecompteSimpleModel.idPosteTravail" operation="EQUALS" />
				<search-field name="forIdTravailleur"
					field-ref="travailleurSimpleModel.id" operation="EQUALS" />
				<search-field name="forIdsDecomptesIn"
					field-ref="ligneDecompteSimpleModel.idDecompte" operation="IN" />
				<search-field name="forSequence" field-ref="ligneDecompteSimpleModel.sequence" operation="EQUALS" />
				<search-field name="fromSequence" field-ref="ligneDecompteSimpleModel.sequence" operation="GREATER" />				
				<search-field name="toSequence" field-ref="ligneDecompteSimpleModel.sequence" operation="LESS" />
				<search-field name="forEtatDecompte" field-ref="decompteSimpleModel.etat" operation="EQUALS" />
				<search-field name="forEtatDecompteIn" field-ref="decompteSimpleModel.etat" operation="IN" />
				<search-field name="beforeDateFinDecompte" field-ref="decompteSimpleModel.periodeFin" operation="LESS_OR_EQUALS" />
				<search-field name="forPeriodeDebut" field-ref="ligneDecompteSimpleModel.periodeDebut" operation="GREATER_OR_EQUALS" />
				<search-field name="forPeriodeFin" field-ref="ligneDecompteSimpleModel.periodeFin" operation="LESS_OR_EQUALS" />
				<search-field name="forPeriodeFinAfter" field-ref="ligneDecompteSimpleModel.periodeFin" operation="GREATER" />
				<search-field name="forIdConvention" field-ref="affiliationSimpleModel.idConvention" operation="EQUALS" />
				<search-field name="forTypeDecompteIn" field-ref="decompteSimpleModel.type" operation="IN" />
				<search-field name="forIdsPostesTravailIn" field-ref="ligneDecompteSimpleModel.idPosteTravail" operation="IN" />
				<search-group operator="AND">
					<search-group operator="OR">
						<search-field name="forDesignationUpper1Like" field-ref="travailleurTiersSimpleModel.designationUpper1" operation="LIKE" />		
						<search-field name="forDesignationUpper2Like" field-ref="travailleurTiersSimpleModel.designationUpper2" operation="LIKE" />		
					</search-group>
				</search-group>
				<search-field name="forRaisonSocialeUpperLike" field-ref="affiliationSimpleModel.raisonSocialeUpper" operation="LIKE" />
				<search-field name="likeNumeroDecompte" field-ref="decompteSimpleModel.numeroDecompte" operation="LIKE" />
				<search-field name="forNumeroDecompte" field-ref="decompteSimpleModel.numeroDecompte" operation="EQUALS" />
				<search-field name="forIdTravailleurLess" field-ref="travailleurSimpleModel.id" operation="LESS_OR_EQUALS" />
				<search-field name="forIdTravailleurGreater" field-ref="travailleurSimpleModel.id" operation="GREATER_OR_EQUALS" />
				<search-field name="forIdEmployeur" field-ref="decompteSimpleModel.idEmployeur" operation="EQUALS" />
				<search-field name="forAnneeCotisationsGreaterOrEquals" field-ref="ligneDecompteSimpleModel.anneeCotisations" operation="GREATER_OR_EQUALS" />
				<search-field name="forAnneeCotisationsLessOrEquals" field-ref="ligneDecompteSimpleModel.anneeCotisations" operation="LESS_OR_EQUALS" />
				<search-field name="forToTreat" field-ref="ligneDecompteSimpleModel.toTreat" operation="EQUALS" />
			</search-group>
		</search-definition>
		<order-by name="default">
			<order-field field-ref="ligneDecompteSimpleModel.sequence" order="ASC"/>
		</order-by>
		<order-by name="employeur">
			<order-field field-ref="decompteSimpleModel.idEmployeur" order="ASC" />
		</order-by>
		<order-by name="sequenceAsc">
			<order-field field-ref="ligneDecompteSimpleModel.sequence" order="ASC"/>
		</order-by>
		<order-by name="sequenceDesc">
			<order-field field-ref="ligneDecompteSimpleModel.sequence" order="DESC"/>
		</order-by>	
		<order-by name="dateFinDecompteDesc">
			<order-field field-ref="decompteSimpleModel.periodeFin" order="DESC" />
		</order-by>
		<order-by name="dateFinDecompteAsc">
			<order-field field-ref="decompteSimpleModel.periodeFin" order="ASC" />
		</order-by>
		
		<order-by name="dateFinDecompteAsc">
			<order-field field-ref="travailleurTiersSimpleModel.designation1" order="ASC" />
			<order-field field-ref="travailleurTiersSimpleModel.designation2" order="ASC" />
		</order-by>
		
		<!-- 		Pour les tri de la vue globale travailleur -->
		<order-by name="idDecompteAsc">
			<order-field field-ref="decompteSimpleModel.id" order="ASC"/>
		</order-by>	
		<order-by name="idDecompteDesc">
			<order-field field-ref="decompteSimpleModel.id" order="DESC"/>
		</order-by>	
		
		<order-by name="raisonSocialeAsc">
			<order-field field-ref="affiliationSimpleModel.raisonSociale" order="ASC"/>
		</order-by>	
		<order-by name="raisonSocialeDesc">
			<order-field field-ref="affiliationSimpleModel.raisonSociale" order="DESC"/>
		</order-by>	

		<order-by name="noDecompteAsc">
			<order-field field-ref="decompteSimpleModel.numeroDecompte" order="ASC"/>
		</order-by>	
		<order-by name="noDecompteDesc">
			<order-field field-ref="decompteSimpleModel.numeroDecompte" order="DESC"/>
		</order-by>	

		<order-by name="typeAsc">
			<order-field field-ref="decompteSimpleModel.type" order="ASC"/>
		</order-by>	
		<order-by name="typeDesc">
			<order-field field-ref="decompteSimpleModel.type" order="DESC"/>
		</order-by>	

		<order-by name="periodeSalaireAsc">
			<order-field field-ref="decompteSimpleModel.periodeDebut" order="ASC"/>
		</order-by>	
		<order-by name="periodeSalaireDesc">
			<order-field field-ref="decompteSimpleModel.periodeDebut" order="DESC"/>
		</order-by>	

		<order-by name="salaireAsc">
			<order-field field-ref="ligneDecompteSimpleModel.salaireTotal" order="ASC"/>
		</order-by>	
		<order-by name="salaireDesc">
			<order-field field-ref="ligneDecompteSimpleModel.salaireTotal" order="DESC"/>
		</order-by>	
		
		<order-by name="tauxAsc">
			<order-field field-ref="ligneDecompteSimpleModel.tauxContribuable" order="ASC"/>
		</order-by>	
		<order-by name="tauxDesc">
			<order-field field-ref="ligneDecompteSimpleModel.tauxContribuable" order="DESC"/>
		</order-by>	
		
		<order-by name="heuresAsc">
			<order-field field-ref="ligneDecompteSimpleModel.nombreHeures" order="ASC" />
		</order-by>
		<order-by name="heuresDesc">
			<order-field field-ref="ligneDecompteSimpleModel.nombreHeures" order="DESC" />
		</order-by>
		
		<order-by name="travailleur">
			<order-field field-ref="travailleurTiersSimpleModel.designation1" order="ASC" />
			<order-field field-ref="travailleurTiersSimpleModel.designation2" order="ASC" />
		</order-by>

		<order-by name="salaireHoraireAsc">
			<order-field field-ref="ligneDecompteSimpleModel.salaireHoraire" order="ASC" />
		</order-by>
		<order-by name="salaireHoraireDesc">
			<order-field field-ref="ligneDecompteSimpleModel.salaireHoraire" order="DESC" />
		</order-by>
		
