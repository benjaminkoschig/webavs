<?xml version="1.0" encoding="iso-8859-1"?>
<model-mapping>
	<simple-model className="ch.globaz.al.business.models.rafam.AnnonceRafamModel">
		<description>Modèle représentant une annonce RAFam</description>
		<table name="ALANNO" hasCreationSpy="true" hasSpy="true" alwaysIncrementPrimaryKey="true"/>
		<fields>
			<primary-key name="idAnnonce" column="ARIDAN" comment="ID de l'annonce"/>
			
			<field name="recordNumber" column="ARRCNU" type="NUMERIC" dataType="NUMERIC(16,0)" mandatory="true" comment="Record Number de l'annonce, correspond a l'id du côté de la centrale"/>
			
			<field name="idDroit" column="FID" type="NUMERIC" mandatory="true" comment="ID (FK) du droit lié à l'annonce"/>
			<field name="nssEnfant" column="ARNSSE" type="STRING" dataType="VARCHAR(16)" mandatory="true" comment="NSS de l'enfant"/>
			<field name="newNssEnfant" column="ARNVNE" type="STRING" dataType="VARCHAR(16)" mandatory="true" comment="Nouveau NSS de l'enfant"/>
			<field name="nomEnfant" column="ARNOME" type="STRING" mandatory="false" comment="Nom de l'enfant"/>
			<field name="prenomEnfant" column="ARPREE" type="STRING"  mandatory="false" comment="Prénom de l'enfant"/>
			<field name="sexeEnfant" column="ARSEXE" type="NUMERIC" dataType="NUMERIC(8,0)" mandatory="false" comment="Sexe de l'enfant"/>
			<field name="dateNaissanceEnfant" column="ARNAIE" type="DATE" mandatory="false" comment="Date de naissance de l'enfant"/>
			<field name="dateMortEnfant" column="ARMORE" type="DATE" mandatory="false" comment="Date de la mort de l'enfant"/>
			<field name="codeCentralePaysEnfant" column="ARPAYE" type="NUMERIC" dataType="NUMERIC(3,0)" mandatory="true" comment="Pays de domicile de l'enfant" />
			
			<field name="idAllocataire" column="BID" type="NUMERIC" mandatory="true" comment="ID (FK) de l'allocataire à l'annonce"/>
			<field name="nssAllocataire" column="ARVNAL" type="STRING" dataType="VARCHAR(16)" mandatory="true" comment="NSS de l'allocataire"/>
			<field name="nomAllocataire" column="ARNOMA" type="STRING" dataType="VARCHAR(100)" mandatory="false" comment="Nom de l'allocataire"/>
			<field name="prenomAllocataire" column="ARPREA" type="STRING" dataType="VARCHAR(100)" mandatory="false" comment="Prénom de l'allocataire"/>
			<field name="sexeAllocataire" column="ARSEXA" type="NUMERIC" dataType="NUMERIC(8,0)" mandatory="false" comment="Sexe de l'allocataire"/>
			<field name="dateNaissanceAllocataire" column="ARNAIA" type="DATE" mandatory="false" comment="Date de naissance de l'allocataire"/>
			<field name="dateMortAllocataire" column="ARMORA" type="DATE" mandatory="false" comment="Date de la mort de l'allocataire"/>
			
			<field name="debutDroit" column="ARDEBD" type="DATE" mandatory="false" comment="Début du droit"/>
			<field name="echeanceDroit" column="ARECD" type="DATE" mandatory="false" comment="Echeance du droit"/>	
			
			<field name="baseLegale" column="ARBASE" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="true" comment="Base légale"/>
			<field name="canton" column="ARCANT" type="STRING" dataType="CHAR(2)" mandatory="true" comment="Canton"/>
			
			<field name="codeStatutFamilial" column="ARESFA" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="false" comment="Statut familial"/>
			<field name="genrePrestation" column="AREGEA" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="true" comment="Genre de prestation"/>
			<field name="codeTypeActivite" column="AREACT" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="true" comment="Activité de l'allocataire"/>
			<field name="codeRemarque" column="AREMAR" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="false" comment="Code remarque"/><!-- N'est pas utilisé actuellement -->
			<field name="codeRetour" column="ARECOR" type="NUMERIC" dataType="NUMERIC(2,0)" mandatory="true" comment="Code de retour généré par la centrale"/>
		
			<field name="dateCreation" column="ARDATE" type="DATE" mandatory="false" comment="Date de création de l'annonce"/>
			<field name="dateMutation" column="ARDATM" type="DATE" mandatory="false" comment="Date de mutation de l'annonce"/>
			<field name="dateReception" column="ARDATR" type="DATE" mandatory="false" comment="Date de réception du retour de l'annonce"/>
			
			<field name="canceled" column="ARCANC" type="BOOLEAN" mandatory="false" comment="Indique si l'annonce a été annulée"/>	
			<field name="delegated" column="ARDELE" type="BOOLEAN" mandatory="false" comment="Indique si l'annonce est liée à un employeur délégué"/>
			
			<field name="internalOfficeReference" column="ARINOR" type="STRING" dataType="VARCHAR(36)" mandatory="false" comment="Référence interne"/>
			<field name="internalError" column="ARIERR" type="BOOLEAN" mandatory="false" comment="Indique si une erreur s'est produite (usage interne)"/>
			<field name="internalErrorMessage" column="ARIERM" type="STRING" dataType="VARCHAR(250)" mandatory="false" comment="message lié à ARIERR"/>
			
			<field name="typeAnnonce" column="ARTYAN" type="STRING" dataType="VARCHAR(3)" mandatory="true" comment="Type d'annonce (68a, 68b, ...)"/>
			<field name="etat" column="CSETAT" type="NUMERIC" dataType="NUMERIC(8,0)" mandatory="true" comment="Code Système de l'état actuel de l'annonce"/>
			
			<field name="evDeclencheur" column="CSEVDE" dataType="NUMERIC(8,0)" type="NUMERIC" mandatory="true" comment="Evenement déclencheur de l'annonce"/>
			
			<field name="officeIdentifier" column="AROFID" type="STRING" dataType="VARCHAR(10)" mandatory="true" comment="Delivery office id de la caisse"/>
			<field name="officeBranch" column="ARBRAN" type="STRING" dataType="VARCHAR(10)" mandatory="true" comment="branche de l'office"/>
			<field name="legalOffice" column="ARLEOF" type="STRING" dataType="VARCHAR(10)" mandatory="true" comment="Legal office de la caisse"/>
			<field name="numeroIDE" column="ARNIDE" type="STRING" dateType="VARCHAR(50)" mandatory="false" comment="numéro IDE" />
		</fields>
		
		<search-definition name="default">
			<search-group operator="AND">
				<search-field name="forIdAnnonce" field-ref="idAnnonce" operation="EQUALS"/>
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="inIdDroit" field-ref="idDroit" operation="IN"/>
				<search-field name="forIdDroit" field-ref="idDroit" operation="EQUALS"/>
				<search-field name="inEtatAnnonce" field-ref="etat" operation="IN"/>
				<search-field name="forEtatAnnonce" field-ref="etat" operation="EQUALS"/>
				<search-field name="inTypeAnnonce" field-ref="typeAnnonce" operation="IN"/>
				<search-field name="forTypeAnnonce" field-ref="typeAnnonce" operation="EQUALS"/>
				<search-field name="forCodeRetour" field-ref="codeRetour" operation="EQUALS"/>
			</search-group>
		</search-definition>
		
		<search-definition name="AnnonceForReceipt">
			<search-group operator="AND">
				<search-group operator="OR">
					<search-field name="forEtatAnnonce" field-ref="etat" operation="EQUALS"/>
					<search-field name="forCodeRetour" field-ref="codeRetour" operation="EQUALS"/>
				</search-group>
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="inTypeAnnonce" field-ref="typeAnnonce" operation="IN"/>	
			</search-group>
		</search-definition>
		
		<search-definition name="lastActive">
			<search-group operator="AND">
				<search-field name="forIdDroit" field-ref="idDroit" operation="EQUALS"/>
				<search-field name="forGenrePrestation" field-ref="genrePrestation" operation="EQUALS"/>
				<search-field name="inEtatAnnonce" field-ref="etat" operation="IN"/>
				<search-field name="inTypeAnnonce" field-ref="typeAnnonce" operation="IN"/>
				<search-field name="forCodeRetour" field-ref="codeRetour" operation="NOT_EQUALS"/>	
			</search-group>
		</search-definition>
		
		<search-definition name="lastActive68c">
			<search-group operator="AND">
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="forTypeAnnonce" field-ref="typeAnnonce" operation="EQUALS"/>
				<search-field name="forCodeRetour" field-ref="codeRetour" operation="NOT_EQUALS"/>
			</search-group>
		</search-definition>
		
		<search-definition name="doublon68c">
			<search-group operator="AND">
				<search-field name="forIdAnnonce" field-ref="idAnnonce" operation="NOT_EQUALS"/>
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="forTypeAnnonce" field-ref="typeAnnonce" operation="EQUALS"/>
			</search-group>
		</search-definition>
		
		<search-definition name="JUnit">
			<search-group operator="AND">
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="forIdDroit" field-ref="idDroit" operation="EQUALS"/>
				<search-field name="inEtatAnnonce" field-ref="etat" operation="IN"/>
				<search-field name="forEtatAnnonce" field-ref="etat" operation="EQUALS"/>
				<search-field name="inTypeAnnonce" field-ref="typeAnnonce" operation="IN"/>
				<search-field name="forTypeAnnonce" field-ref="typeAnnonce" operation="EQUALS"/>
				<search-field name="forCodeRetour" field-ref="codeRetour" operation="EQUALS"/>
				<search-field name="forGenrePrestation" field-ref="genrePrestation" operation="EQUALS"/>
				
			</search-group>
		</search-definition>
		
		<search-definition name="afDelegue">
			<search-group operator="AND">
				<search-field name="forDelegated" field-ref="delegated" operation="EQUALS" />
				<search-field name="likeInternalOffice" field-ref="internalOfficeReference" operation="LIKE"/>	
				<search-field name="forIdAnnonce" field-ref="idAnnonce" operation="EQUALS"/>
				<search-field name="forRecordNumber" field-ref="recordNumber" operation="EQUALS"/>
				<search-field name="forNssEnfant" field-ref="nssEnfant" operation="EQUALS"/>
				<search-field name="inEtatAnnonce" field-ref="etat" operation="IN"/>
				<search-field name="forEtatAnnonce" field-ref="etat" operation="EQUALS"/>
				<search-field name="forCodeRetour" field-ref="codeRetour" operation="EQUALS"/>
			</search-group>
		</search-definition>
		
		<order-by name="idAnnonce">
			<order-field field-ref="idAnnonce" order="DESC"/>
		</order-by>
		
		<order-by name="lastActive">
			<order-field field-ref="idAnnonce" order="DESC"/>
		</order-by>
		
		<order-by name="AnnonceForReceipt">
			<order-field field-ref="idAnnonce" order="DESC"/>
		</order-by>
		
		<order-by name="default">
			<order-field field-ref="idAnnonce" order="DESC"/>
		</order-by>
		
		<order-by name="upi">
			<order-field field-ref="recordNumber" order="DESC"/>
			<order-field field-ref="idAnnonce" order="DESC"/>
		</order-by>
		
	</simple-model>
</model-mapping>
